<resources>

    <declare-styleable name="recycler_swipe_SwipeMenuLayout">
        <attr name="leftViewId" format="reference"/>
        <attr name="rightViewId" format="reference"/>
        <attr name="contentViewId" format="reference"/>
    </declare-styleable>

    <!--轮播图自定义属性-->
    <declare-styleable name="BannerView">
        <attr name="dotGravity" format="integer"></attr>
        <attr name="dotIndicatorFocus" format="reference"></attr>
        <attr name="dotIndicatorNormal" format="reference"></attr>
        <attr name="dotSize" format="dimension"></attr>
        <attr name="dotDistance" format="dimension"></attr>
        <attr name="widthProportion" format="integer"></attr>
        <attr name="heightProportion" format="integer"></attr>
        <attr name="bottomColor" format="color"></attr>
    </declare-styleable>


    <declare-styleable name="RoundImageView">
        <attr name="type" format="enum">
            <enum name="circle" value="1"/>
            <enum name="round" value="2"/>
        </attr>
        <attr name="radius" format="dimension"/>
        <attr name="outBorder" format="dimension"/>
        <attr name="outColor" format="color"/>
    </declare-styleable>



    <declare-styleable name="IndicatorLayout">
       <attr name="tabNum" format="integer"></attr>
    </declare-styleable>

</resources>